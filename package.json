{
  "name": "scribble",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:simonhildebrandt/scribble.git",
  "author": "Simon Hildebrandt <simonhildebrandt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "live-server --mount=/assets:scribble/assets --port=9000 --entry-file=index.html dev/",
    "build": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js",
    "watch": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js --watch",
    "export-md": "node tools/build_js.mjs",
    "export-md-watch": "nodemon --watch scribble -e md tools/build_js.mjs",
    "cp-content": "cp -r scribble/assets public",
    "cp-html": "cp dev/index.html public/index.html",
    "build_prod": "NODE_ENV=production yarn esbuild src/index.jsx --bundle --outfile=public/index.js",
    "compile": "yarn export-md && yarn cp-content && yarn cp-html && yarn build_prod",
    "deploy": "firebase deploy --only hosting",
    "build-and-publish": "yarn compile && yarn deploy"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@chakra-ui/icons": "^2.0.6",
    "@chakra-ui/react": "^2.2.4",
    "@date-io/luxon": "^2.14.0",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "esbuild": "^0.14.18",
    "firebase": "^9.9.1",
    "firebase-tools": "^11.4.2",
    "framer-motion": "^4",
    "glob": "^8.0.3",
    "live-server": "1.2.1",
    "navigo": "^8.11.1",
    "node-watch": "^0.7.3",
    "nodemon": "^2.0.19",
    "react": "^18.0",
    "react-dom": "^18.0",
    "rehype-stringify": "^9.0.3",
    "remark-extract-frontmatter": "^3.2.0",
    "remark-frontmatter": "^4.0.1",
    "remark-obsidian": "^1.4.0",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "to-vfile": "^7.2.3",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.0",
    "yaml": "^2.1.1"
  }
}
